
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(200,101,80,0.6) 0%, rgba(50,36,61,0.6) 50%), url(<%= image_path "bar" %>);">
    <div class="banner-content">
      <h1>Barkob</h1>
      <p>Find and create delicious Cocktails</p>
      <%= link_to "Go drinking", cocktail_path(@cocktails.sample), class: "btn btn-danger btn-lg" %>
    </div>
  </div>


<div class="main-index">

  <h3 class="text-center">Check out the amazing creations from our users </h3>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4">

          <% if @img.include?(cocktail.name) %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path "cocktail_"+cocktail.name+".png" %>);">
          <% else %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path "cocktail_.png" %>);">
          <% end %>

            <div class="card-category">With Alcohol</div>
            <div class="card-description">
              <h2><%= link_to cocktail.name, cocktail_path(cocktail), class: "card-name" %></h2>
              <p> <%= link_to "Delete me", cocktail_path(cocktail), method: :delete, class: "card-delete" %></p>
            </div>

            <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/JakobBe">
          </div>

      </div>
      <% end %>
    </div>
  </div>
</div>

