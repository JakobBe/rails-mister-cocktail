<h1><%= @cocktail.name %></h1>

<h3>These are the ingredients</h3>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>

    <p><%= dose.description %> of <%=Ingredient.find(dose.ingredient_id).name %> </p>
    <p><%= link_to "Delete", cocktail_dose_path(@cocktail, dose), method: :delete %></p>

  </li>
  <% end %>
</ul>


<p><%= link_to "See all cocktails", root_path %></p>
<p><%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %></p>

