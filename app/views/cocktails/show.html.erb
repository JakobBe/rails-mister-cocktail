<h1 class="text-center"><%= @cocktail.name %></h1>


<% if @cocktail.doses[0] %>
  <h3>This is what you need</h3>
<% else  %>
  <h3>Add the ingredients for <b><%= @cocktail.name %></b> </h3>
<% end %>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>

    <p>
      <%= dose.description %> of <%=Ingredient.find(dose.ingredient_id).name %> <%= link_to cocktail_dose_path(@cocktail, dose), method: :delete do %>
      <%= image_tag 'delete.png' , {class: "delete-ing"} %>
      <% end %>
    </p>

  </li>
  <% end %>
</ul>

<h1>Add ingredients to <%= @cocktail.name %></h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.error_notification %>
  <%= f.input :description %>
  <%= f.input :ingredient, collection: @ingredients, selected: @ingredients[0]%>

  <%= f.button :submit %>
<% end %>



<p><%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %></p>

